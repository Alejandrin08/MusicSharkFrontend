@model Login
@{
    ViewData["Title"] = "Inicio de sesión";
}

<form asp-action="Index">
    <div class="card mx-auto" style="max-width: 500px;">
        <div class="card-body">
            <h1 class="h3 text-center" style="color: #c6a0ee;">Bienvenido a Music Shark</h1>
            <h2 class="h6 text-center text-secondary-emphasis">Facultad de Estadística e Informática</h2>
            <h5 class="card-card-title text-center mt-4">@ViewData["Title"]</h5>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="Email" maxlength="75">
                <label asp-for="Email" class="form-label"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" placeholder="Password" maxlength="20">
                <label asp-for="Password" class="form-label"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <p class="card-text small">Ingrese sus credenciales para poder disfrutar del contenido de la plataforma.</p>
            <p class="card-text small">¿No tiene una cuenta? <a class="text-decoration-none medium"  asp-action="NewUser" >Registrese aquí</a></p>
            
        </div>
        <div class="card-footer text-center">
            <button type="submit" class="btn btn-success">Iniciar sesión</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}