@model SongMusicGenre
@{
    ViewData["Title"] = "Canciones";
    ViewData["SubTitle"] = "Agregar género musical";
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb small">
        <li class="breadcrumb-item"><a class="text-decoration-none" title="Regresar al listado"
                asp-action="Index">Listado</a></li>
        <li class="breadcrumb-item"><a class="text-decoration-none" title="Regresar a las categorias"
                asp-action="MusicGenres" asp-route-id="@Model.Song?.SongId">Géneros musicales</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData["SubTitle"]</li>
    </ol>
</nav>

<h2 class="text-center mb-3">@ViewData["Title"] <small class="text-muted fs-5">@ViewData["SubTitle"]</small></h2>

<h4 class="my-3">Agregar género musical</h4>
<form asp-action="AddMusicGenres" asp-route-id="@Model.Song?.SongId">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card mt-3">
        <div class="card-body small">
            <div class="form-floating mb-3">
                <select class="form-select" asp-for="MusicGenreId" class="form-control" asp-items="ViewBag.Categoria">
                    <option value="">Seleccione un género musical</option>
                </select>
                <label asp-for="MusicGenreId" class="control-label"></label>
                <span asp-validation-for="MusicGenreId" class="text-danger" />
            </div>
        </div>
    </div>

    <div class="text-center mt-3">
        <button id="btnEnviar" type="submit" class="btn btn-sm btn-success">Agregar</button>
        <a class="btn btn-sm btn-outline-secondary" asp-action="MusicGenres" asp-route-id="@Model.Song?.SongId"
            title="Cancelar">Cancelar</a>
    </div>
</form>

<h4 class="my-3">Canción</h4>
<partial name="_CardPartial" model="Model.Song" />