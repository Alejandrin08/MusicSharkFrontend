@model SongMusicGenre
@{
    ViewData["Title"] = "Canción";
    ViewData["SubTitle"] = "Remover Género musical";
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb small">
        <li class="breadcrumb-item"><a class="text-decoration-none" title="Regresar al listado"
                asp-action="Index">Listado</a></li>
        <li class="breadcrumb-item"><a class="text-decoration-none" title="Regresar a las categorias"
                asp-action="MusicGenres" asp-route-id="@Model.Song?.SongId">Género musical</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData["SubTitle"]</li>
    </ol>
</nav>

<h2 class="text-center mb-3">@ViewData["Title"] <small class="text-muted fs-5">@ViewData["SubTitle"]</small></h2>

<h4 class="my-3">Remover género musical</h4>
<p class="text-danger">¿Está seguro que desea remover este elemento?</p>
<p class="text-danger">@ViewData["ErrorMessage"]</p>

<form asp-action="RemoveMusicGenres" asp-route-id="@Model.Song?.SongId">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card mt-3">
        <div class="card-body small">
            <div class="form-floating mb-3">
                <div class="form-floating mb-3">
                    <input asp-for="MusicGenreId" placeholder="CategoriaId" readonly class="form-control-plaintext" />
                    <label asp-for="MusicGenreId" class="form-label"></label>
                </div>
                <div class="mb-3 ps-3">
                    <label asp-for="Name" class="form-label form-text"></label>
                    <div class="form-text text-body">@Model.Name</div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-3">
        <button id="btnEnviar" type="submit" class="btn btn-sm btn-success">Remover</button>
        <a class="btn btn-sm btn-outline-secondary" asp-action="MusicGenres" asp-route-id="@Model.Song?.SongId"
            title="Cancelar">Cancelar</a>
    </div>
</form>

<h4 class="my-3">Canción</h4>
<partial name="_CardPartial" model="Model.Song" />