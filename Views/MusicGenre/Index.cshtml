@model List<MusicGenre>
@{
    ViewData["Title"] = "Género musical";
    ViewData["SubTitle"] = "Listado";
}



<h2 class="text-center mb-3">@ViewData["Title"] <small class="text-muted fs-5">@ViewData["SubTitle"]</small></h2>

<div class="row small mb-3">
    <div class="col">
        <a class="text-decoration-none" asp-action="Create" title="Crear nuevo">Crear nueva</a>
    </div>
    <div class="col text-end">
        Mostrando @Model.Count() elementos
    </div>
</div>

@if (Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered small">
            <thead class="text-center">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().MusicGenreId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Protected)
                    </th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MusicGenreId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @(item.Protected ? "No" : "Sí")
                        </td>
                        <td width="1">
                            <a class="text-decoration-none small text-uppercase" style="color: #c6a0ee;" asp-action="Detail" asp-route-id="@item.MusicGenreId">Detalle</a>
                        </td>
                        <td width="1">
                            <a class="text-decoration-none small text-uppercase" style="color: #c6a0ee;" asp-action="Edit" asp-route-id="@item.MusicGenreId">Editar</a>
                        </td>
                        <td width="1">
                            <a class="text-decoration-none small text-uppercase" style="color: #c6a0ee;" asp-action="Delete" asp-route-id="@item.MusicGenreId">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-5">
        <div class="alert alert-warning" role="alert">
            No se han encontrado elementos. Inténtelo de nuevo más tarde.
        </div>
    </div>
}